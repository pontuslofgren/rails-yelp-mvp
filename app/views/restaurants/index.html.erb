<h2>Overview</h2>

<div class="row justify-content-space-between">
  <% @restaurants.each do |restaurant| %>
    <div class="col-lg-3 mb-3">
      <div class="shadow-sm border card">
        <img class="card-image" src="https://source.unsplash.com/random/?food">
        <div class="card-body">
            <h3 class="card-title"><%= restaurant.name %></h3>
            <h6 class="card-subtitle mb-2 text-muted">
              <% if restaurant.reviews.count(:rating) > 0 %>
                <%= (restaurant.reviews.average(:rating) * 2.0).round / 2.0 %> / 5 (<%= restaurant.reviews.count(:rating) %> reviews)
              <% else %>
                <%= "No ratings" %>
              <% end %>
            </h6>
            <p class="card-text"><%= restaurant.category.capitalize %></p>
        </div>
            <div class="card-body border-top">
            <%= link_to 'Read more', restaurant_path(restaurant), class:"card-link" %>
          </div>
      </div>
    </div>
  <% end %>
</div>
